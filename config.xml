<?xml version='1.0' encoding='utf-8'?>
<widget id="com.equilibradigital.imbatman" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Imbatman</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="jackson-eu@hotmail.com" href="http://equilibra.digital">
        Equilibra Digital
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="orientation" value="portrait" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="0" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="true" />
        <allow-intent href="market:*" />
        <icon density="ldpi" platform="android" src="res/icon/android/icon-ldpi.png" />
        <icon density="mdpi" platform="android" src="res/icon/android/icon-mdpi.png" />
        <icon density="hdpi" platform="android" src="res/icon/android/icon-hdpi.png" />
        <icon density="xhdpi" platform="android" src="res/icon/android/icon-xhdpi.png" />
        <icon density="xxhdpi" platform="android" src="res/icon/android/icon-xxhdpi.png" />
        <icon density="xxxhdpi" platform="android" src="res/icon/android/icon-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>